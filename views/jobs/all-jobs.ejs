<% /*
    All Jobs
    http://localhost:3000

    Currently also used for search results.

    This file must be the list of all jobs.
    If we want to change the home page to something else tell Dylan and he will make a new ejs.
*/ %>

<div class="content">

    <div class="span-19 first last">
        <% if (jobs.locations) { %>
            <% if (jobs.locations['dc-northern-virgina']) { %>
            <div class="span-4 first">
                <h3>Northern Virginia</h3>
            </div>
            <div class="span-15 last job-section">
                <%- partial(locals.departments ? 'jobs/department' : 'jobs/jobs', { collection: jobs.locations['dc-northern-virgina'], as: "jobs", locals: { location: 'dc-northern-virgina' }} ) %>
            </div>
            <% } %>

            <% if (jobs.locations['san-francisco']) { %>
            <div class="span-4 first">
                <h3>San Francisco</h3>
            </div>
            <div class="span-15 last job-section">
                <%- partial(locals.departments ? 'jobs/department' : 'jobs/jobs', { collection: jobs.locations['san-francisco'], as: "jobs", locals: { location: 'san-francisco' }} ) %>
            </div>
            <% }  %>
        <% } else { %>
            <div class="span-3 first">
                <div class="strong">SEARCH</div>
            </div>

            <div class="span-16 last">
                <ul>
                    <%- partial('jobs/job', { collection: jobs, as: "job", locals: { } } ) %>
                </ul>
            </div>

             <div class="clear" style="margin-bottom: 20px;"></div>

        <% } %>
    </div>

</div>

