<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Opower Jobs <%= locals.title ? '- ' + locals.title : '' %></title>
    <meta http-equiv="X-UA-Compatible" content="chrome=1" />
<%- partial('comment.ejs') %>    
    <link rel="alternate" type="application/atom+xml" title="Opower New Jobs Feed" href="http://opowerjobs.com/atom.xml" />
    <style>
    @font-face {
        font-weight: normal;
        font-family: 'Dagny';
        src: local('?'),
            url("/css/fonts/DagnyWebPro.woff") format("woff");
    }

    @font-face {
        font-weight: bold;
        font-family: 'Dagny';
        src: url('/css/fonts/DagnyWebPro-Bold.eot');
        src: local('?'),
            url("/css/fonts/DagnyWebPro-Bold.woff") format("woff");
    }
    </style>
    <%- styles %>

</head>
<% locals.team && locals.all_teams[locals.team]  ? currentPageID = locals.team : '' %>
<body class="page-<%- currentPageID %>">
    <div class="clouds"></div>
    <div class="container">
        <div class="span-6 first">
            <div class="sidebar">
                <a href="/" title="Careers at Opower">
                    <img class="logo" src="/css/theme/Careers_Opower_logo.png" alt="Opower" />
                </a>
                <div class="navigation">
                    <ul class="nav-main rounded">
                        <%- partial("navigation/nav", { collection: pages, as: "page"} ) %>
                    </ul>
                    <% if (current_url.indexOf('search') === -1) { %>
                        <%- partial('search/form') %>
                    <% } %>

                </div>
            </div>
        </div>

        <div class="span-18 last">
            <div class="page">
                <%- body %>
                <div class="clear"></div>
            </div>
            <div class="footer">
                <div class="float-left">Looking for the corporate site? Check us out at <a href="http://www.opower.com">Opower.com</a>!</div>
                <div class="float-right"><a href="http://opower.com/company/privacy-policy/" class="small">Privacy</a></div>
            </div>
        </div>
    </div>

    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.min.js"></script>
    <script>!window.jQuery && document.write('<script src="/js/jquery.js"><\/script>');</script>
    <script type="text/javascript" src="/js/jquery-ui.js"></script>
    <%- scripts %>
    <% var gaq_events = tracking_events %>
    <script type="text/javascript">
    <%- production ? '' : ('/' + '*!') %>
    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-18439002-1']); //ogi
    _gaq.push(['_trackPageview']);<%- gaq_events %>
    _gaq.push(['dylan._setAccount', 'UA-17897272-1']); //dylan
    _gaq.push(['dylan._trackPageview']);<%- gaq_events.replace(/'_/, "'dylan._") %>
    (function() {
    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();
    <%- production ? '' : ('*' + '/') %>
    </script>
    <% if (production) { %>
    <script src="http://munchkin.marketo.net/munchkin.js" type="text/javascript"></script>
    <script type="text/javascript">mktoMunchkin("856-UCR-364");</script>
    <% } %>
</body>
</html>