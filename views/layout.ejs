<!DOCTYPE html>
<html>
<head>
    <title>OPOWER Jobs <%= locals.title ? ' - ' + locals.title : '' %><%= locals.job ? ' - ' + locals.job.title : '' %><%= locals.location && locals.all_locations[locals.location]  ? ' - ' + locals.all_locations[locals.location] : '' %><%= locals.department && locals.all_departments[locals.department]  ? ' - ' +  locals.all_departments[locals.department] : '' %></title>

    <%- assets.styles() %>
</head>
<body>
    <div class="clouds"></div>

    <div class="container">
        <div class="span-6 first">
            <img class="logo" src="/css/theme/OPOWER-logo.png" alt="OPOWER" />
            <ul class="navigation">
                <%- partial("navigation/nav", { collection: pages, as: "page", locals: { active: locals.active, current_page: locals.page }} ) %>
            </ul>

            <% if (true || active.search('jobs') !== -1) { %>
                <%- partial('jobs/search', { locals: locals } ) %>
            <% } %>

        </div>

        <div class="span-19 last">
            <div class="page">
                <%- body %>
                <div class="clear"></div>
            </div>
        </div>

    </div>
    <div class="grass"></div>
    <div class="powerlines"></div>

   
     <%- assets.scripts() %>
    <script type="text/javascript">

      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-17897272-1']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();

    </script>
</body>
</html>