<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>OPOWER Jobs <%= locals.title ? ' - ' + locals.title : '' %><%= locals.job ? ' - ' + locals.job.title : '' %><%= locals.location && locals.all_locations[locals.location]  ? ' - ' + locals.all_locations[locals.location] : '' %><%= locals.department && locals.all_teams[locals.department]  ? ' - ' +  locals.all_teams[locals.department] : '' %></title>

    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
<%- partial('comment.ejs') %>    


    <link rel="alternate" type="application/atom+xml" title="ATOM Feed for opowerjobs.com"   href="atom.xml" />

    <link href="/css/jqueryui/flick/jquery-ui-1.8.2.custom.css" rel="stylesheet"  type="text/css" />
    <link href="/css/fonts.css" rel="stylesheet"  type="text/css" />
    <link href="/js/fancybox/jquery.fancybox-1.3.1.css" rel="stylesheet"  type="text/css" />

    <%- assets.styles(this.req.query) %>
</head>
<body class="page-<%- currentPageID %>">
    <div class="clouds"></div>

    <div class="container">
        <div class="span-6 first">
            <div class="sidebar">
                
                <a href="/" title="Careers at OPOWER">
                    <img class="logo" src="/css/theme/OPOWER-logo.png" alt="OPOWER" />
                </a>

                <div class="navigation">
                    
                    <ul class="nav-main rounded">
                    
                        <%- partial("navigation/nav", { collection: pages, as: "page", locals: { currentPageID: currentPageID }} ) %>
                        
                    </ul>
                    
                </div>

                <% if (this.req.url.indexOf('search') === -1) { %>
                    <%- partial('jobs/search', { locals: locals } ) %>
                <% } %>
                
            </div>
        </div>

        <div class="span-18 last">
            <div class="page">
                <%- body %>
                <div class="clear"></div>
            </div>
        </div>

    </div>

   
     <%- assets.scripts(this.req.query) %>
    <script type="text/javascript">

      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-17897272-1']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();

    </script>
</body>
</html>